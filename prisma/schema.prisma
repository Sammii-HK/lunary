// Prisma Schema for Lunary
// This schema includes the social_posts table for AI-generated social media posts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL")
}

model SocialPost {
  id                Int       @id @default(autoincrement())
  content           String    @db.Text
  platform          String    // instagram, twitter, facebook, linkedin, pinterest, reddit
  postType          String    @map("post_type") // feature, benefit, educational, inspirational, behind_scenes, promotional, user_story
  topic             String?   @db.Text
  scheduledDate     DateTime? @map("scheduled_date") @db.Timestamptz(6)
  status            String    @default("pending") // pending, approved, rejected, sent
  rejectionFeedback String?   @map("rejection_feedback") @db.Text
  createdAt         DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([status], name: "idx_social_posts_status")
  @@index([platform], name: "idx_social_posts_platform")
  @@index([createdAt], name: "idx_social_posts_created_at")
  @@index([scheduledDate], name: "idx_social_posts_scheduled_date")
  @@map("social_posts")
}

