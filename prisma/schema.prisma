// Prisma Schema for Lunary
// This schema includes the social_posts table for AI-generated social media posts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL")
}

model SocialPost {
  id                Int       @id @default(autoincrement())
  content           String    @db.Text
  platform          String    // instagram, twitter, facebook, linkedin, pinterest, reddit
  postType          String    @map("post_type") // feature, benefit, educational, inspirational, behind_scenes, promotional, user_story
  topic             String?   @db.Text
  scheduledDate     DateTime? @map("scheduled_date") @db.Timestamptz(6)
  status            String    @default("pending") // pending, approved, rejected, sent
  rejectionFeedback String?   @map("rejection_feedback") @db.Text
  createdAt         DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt         DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([status], name: "idx_social_posts_status")
  @@index([platform], name: "idx_social_posts_platform")
  @@index([createdAt], name: "idx_social_posts_created_at")
  @@index([scheduledDate], name: "idx_social_posts_scheduled_date")
  @@map("social_posts")
}

model AiThread {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  title     String?
  messages  Json
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([userId], name: "idx_ai_threads_user_id")
  @@map("ai_threads")
}

model AiUsage {
  id        String   @id @default(cuid())
  userId    String   @unique @map("user_id")
  day       DateTime @default(now()) @db.Timestamptz(6)
  count     Int      @default(0)
  tokensIn  Int      @default(0) @map("tokens_in")
  tokensOut Int      @default(0) @map("tokens_out")
  plan      String
  renewedAt DateTime @default(now()) @map("renewed_at") @db.Timestamptz(6)

  @@index([day], name: "idx_ai_usage_day")
  @@map("ai_usage")
}

model ApiKey {
  id           String   @id @default(cuid())
  keyHash      String   @unique @map("key_hash")
  keyPrefix    String   @map("key_prefix")
  userId       String   @map("user_id")
  name         String   @default("Default API Key")
  tier         String   @default("free")
  requests     Int      @default(0)
  requestLimit Int      @default(100) @map("request_limit")
  rateLimit    Int      @default(10) @map("rate_limit")
  isActive     Boolean  @default(true) @map("is_active")
  lastUsedAt   DateTime? @map("last_used_at") @db.Timestamptz(6)
  expiresAt    DateTime? @map("expires_at") @db.Timestamptz(6)
  resetAt      DateTime @default(now()) @map("reset_at") @db.Timestamptz(6)
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt    DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([userId], name: "idx_api_keys_user_id")
  @@index([keyHash], name: "idx_api_keys_key_hash")
  @@index([tier], name: "idx_api_keys_tier")
  @@map("api_keys")
}

