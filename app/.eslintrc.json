{
  "extends": "next/core-web-vitals",
  "plugins": [
    "@stylistic/js"
  ],
  "rules": {
    "@stylistic/js/indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "@stylistic/js/max-len": ["warn", 80]
  }
}
