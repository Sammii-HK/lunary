<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Moon Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/moon_phase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Full Moon"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moon_illumination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="98%"
            android:textColor="#9966CC"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/moon_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="in Virgo"
        android:textColor="#AAAAAA"
        android:textSize="11sp"
        android:layout_marginBottom="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333344"
        android:layout_marginVertical="6dp" />

    <!-- Tarot Card Section -->
    <TextView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Sun"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="joy, success, vitality"
        android:textColor="#9966CC"
        android:textSize="11sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333344"
        android:layout_marginVertical="6dp" />

    <!-- Day Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 7"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/day_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reflection"
            android:textColor="#9966CC"
            android:textSize="11sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
